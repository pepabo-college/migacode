<div class="container center-block">
<h1>migacode</h1>
<p id="notice"><%= notice %></p>
<div class="issue">
<h2>
  課題：<%= @issue.title %>
</h2>
<h5>投稿者名：<%= @issue.author %></h5>
<h3>改善したいコード</h3>
  <%= html(@issue.content) %>
</div>

<h4>Leave a comment:</h4>
  <%= form_for([ @issue, @reply ]) do |f| %>

    <% if @reply.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h4>入力に誤りがあります</h4>
        <ul>
          <% @reply.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.text_field :author, placeholder: "投稿者名" %><br>
    <%= f.text_area :content, placeholder: "コード", cols: "60", rows: "15" %><br>
    <%= f.submit "返信する" ,:class => 'btn btn-default' %>
  <% end %>

  <div class="replies">
    <h4>＜返信一覧＞</h4>
    <% if @replies %>
      <% @replies.each do |reply| %>
        <div class="reply">
          <strong><%= reply.author %>：</strong>
          <%= html(reply.content) %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= link_to '課題一覧へ戻る', issues_path, { :class => "btn btn-primary" } %>
</div>
